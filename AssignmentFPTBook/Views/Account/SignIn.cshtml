
@model AssignmentFPTBook.Models.Account
@{
    ViewBag.Title = "SignIn";
}



<section class="login-dark" style="height: 752px;">

    @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "filter: brightness(127%) contrast(132%) grayscale(44%) hue-rotate(35deg) saturate(122%) sepia(31%);background: rgb(30, 40, 51);" }))
    {
        <div class="illustration">
            <i class="icon ion-android-person"></i>
        </div>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", placeholder = "Username", @autofocus = "", @required = "" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "Password", @required = "" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="mb-3">
                <input type="submit" value="Log in" class="btn btn-primary d-block w-100" />

            </div>
            <i>@Html.ActionLink("Do you have account? Sign up", "Register", "Home", routeValues: null, htmlAttributes: new { @class = "forgot", @style = "color: rgb(161,196,231);" })</i>
        </div>


    }




</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



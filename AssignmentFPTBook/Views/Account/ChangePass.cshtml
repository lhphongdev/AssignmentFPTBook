@model AssignmentFPTBook.Models.ChangePassword

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="register-photo" style="margin-top: 55px;">
    <div class="form-container">

        @using (Html.BeginForm("ChangePass", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @style = "background: rgb(235,224,224);" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h2 class="text-center">Update information</h2>


            <div class="form-group">

                @Html.TextBoxFor(u => u.OldPassword, new { @class = "form-control form-control-lg", @readonly = "", @style = "margin-bottom: 5px;background: rgb(198,199,201);color: rgb(0,0,0);" })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">

                @Html.TextBoxFor(u => u.NewPassword, new { @class = "form-control form-control-lg", @placeholder = "Fullname", @autofocus = "", @required = "", @style = "margin-bottom: 5px;background: rgb(237,240,245);color: rgb(0,0,0);" })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">

                @Html.TextBoxFor(u => u.ConfirmPassword, new { @class = "form-control form-control-lg", @placeholder = "Email", @required = "", @style = "margin-bottom: 5px;background: rgb(237,240,245);color: rgb(0,0,0);" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>





            <input class="btn btn-primary" type="submit" value="Update" style="width: 109.2375px;margin-right: 13px;background: rgb(158,20,170);" />
            <a class="btn btn-primary" role="button" style="width: 176.2375px;margin-right: 13px;" href="@Url.Action("ChangePass", "LoggedIn")">Change Password</a>
            <a class="btn btn-primary" role="button" style="width: 109.2375px;background: rgb(251,0,52);" href="@Url.Action("Index", "Home")">Cancel</a>

        }
    </div>
</section>
@model AssignmentFPTBook.Models.Author

@{
    ViewBag.Title = "Delete author";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h2 class="text-center text-primary" style="font-weight: bold;">Delete author</h2>
<h4 class="text-center text-success" style="font-weight: bold;">Check information before deleting</h4>

<ul class="list-group" style="margin-left: 5%;margin-right: 5%;border-radius: 23px;">
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.AuthorID)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.AuthorID)</span>
    </li>
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.AuthorName)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.AuthorName)</span>
    </li>
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.Description)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.Description)</span>
    </li>

    <li class="list-group-item">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-primary btn-lg" style="margin-left: 20%;width: 120px;" onclick="return confirm('Are you sure?');" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger btn-lg", @style = "margin-left: 2%; width: 120px; " })
            }
        </div>
    </li>
</ul>



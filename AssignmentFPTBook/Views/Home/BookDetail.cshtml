@model AssignmentFPTBook.Models.Book

@{
    ViewBag.Title = @Model.BookName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="projects-horizontal" style="padding-top: 4%;padding-bottom: 0px;">
    <div class="container" style="margin-bottom: 5%;">
        <div class="row justify-content-center projects" style="margin-right: 0px;margin-left: 0px;padding-bottom: 0px;margin-top: 0px;">
            <div class="col-sm-6 col-xxl-9 item" style="padding-top: 61px;">
                <div class="row">

                    <div class="col-md-12 col-lg-5">
                        <img class="img-fluid pulse animated infinite" src="~/Image/@Model.UrlImage" style="box-shadow: 30px 15px 35px #9D9684">
                    </div>
                    <div class="col bounce animated" style="margin-left:2%">
                        <h3 class="name" style="font-size: 30px; text-align: left; margin-left: 3%; word-break: break-all;">@Model.BookName</h3>
                        <ul style="font-size: 20px;margin-left: 7px;">
                            <li>Author: @Model.Author.AuthorName</li>
                            <li>Category: @Model.Category.CategoryName</li>
                            <li>Number of books left in stock: <b>@Model.Quantity</b></li>
                            <li class="text-break" style="text-align:justify">Description: @Model.DetailDesc</li>
                        </ul>
                        <h4 style="margin-left: 3%;">Price:&nbsp;<strong style="font-size: 35px;">@Model.Price $</strong></h4>

                        @if (Model.Quantity != 0)
                        {
                            @Html.ActionLink("Add to cart", "AddtoCart", "ShoppingCart", new { id = Model.BookID }, new { @class = "btn btn-success fas fa-shopping-cart", @style = "margin-left: 6%;margin-top: 3%;width: 150px;height: 30px;" })
                        }
                        else
                        {
                            <h1 style="color:red;margin-left:20px">Out of stock</h1>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
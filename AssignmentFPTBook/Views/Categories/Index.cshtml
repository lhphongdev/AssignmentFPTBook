@model IEnumerable<AssignmentFPTBook.Models.Category>

@{
    ViewBag.Title = "Category Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow" style="box-shadow: 0px 0px;">
        <div class="card-header py-3">
            <p class="text-center text-primary m-0 fw-bold" style="font-size: 24px;">Category Management</p>
            <div style="padding-left: 43%;">
                @Html.ActionLink("Add new category", "Create", null, new { @class = "btn btn-primary", @style = "width: 172.6875px;margin-top: 10px;" })
            </div>
        </div>
        <div class="card-body" style="border-style: ridge;border-radius: 19px;filter: contrast(56%);">
            <div class="table-responsive table mt-2" id="dataTable-1" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th style="width: 241.4px;text-align: center;">@Html.DisplayNameFor(model => model.CategoryID)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.CategoryName)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.Description)</th>
                            <th style="text-align: center;">Detail</th>
                            <th style="text-align: center;">Edit</th>
                            <th style="text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.CategoryID)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.Description)</td>

                                <td style="text-align: center;">
                                    <div>@Html.ActionLink(" ", "Details", new { id = item.CategoryID }, new { @class = "fas fa-info-circle", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                                </td>
                                <td style="text-align: center;">
                                    <div>@Html.ActionLink(" ", "Edit", new { id = item.CategoryID }, new { @class = "fas fa-edit", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                                </td>
                                <td style="text-align: center;">
                                    <div>@Html.ActionLink(" ", "Delete", new { id = item.CategoryID }, new { @class = "fas fa-trash", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>











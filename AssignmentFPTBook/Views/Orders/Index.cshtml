@model IEnumerable<AssignmentFPTBook.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow" style="box-shadow: 0px 0px;">
        <div class="card-header py-3">
            <p class="text-center text-primary m-0 fw-bold" style="font-size: 24px;">Orders Management</p>
            <div style="padding-left: 43%;"></div>
        </div>
        <div class="card-body" style="border-style: ridge;border-radius: 19px;filter: contrast(56%);">
            <div class="table-responsive table mt-2" id="dataTable-1" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th style="width: 93.4px;text-align: center;">Order ID</th>
                            <th style="text-align: center;">Order date</th>
                            <th style="text-align: center;">Total Price</th>
                            <th style="text-align: center;">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;"> @Html.DisplayFor(modelItem => item.OrderID)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                <td style="color: rgb(0,0,0);font-weight: bold;text-align: center; ">@Html.DisplayFor(modelItem => item.TotalPrice)</td>

                                <td style="color: rgb(0,0,0);font-weight: bold;text-align: center;font-size: 24px;">
                                    <div>

                                        @Html.ActionLink(" ", "Details", null, new { id = item.OrderID }, new { @class = "fa fa-info-circle" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


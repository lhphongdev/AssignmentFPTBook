@model AssignmentFPTBook.Models.Book

@{
    ViewBag.Title = "Delete Book";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="text-center text-primary" style="font-weight: bold;">Details</h2>

<ul class="list-group" style="margin-left: 5%;margin-right: 5%;border-radius: 23px;">
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.BookID)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.BookID)</span>
    </li>
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.BookName)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.BookName)</span>
    </li>
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.Category.CategoryName)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.Category.CategoryName)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.Author.AuthorName)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.Author.AuthorName)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.Quantity)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.Quantity)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.Price)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.Price)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.DetailDesc)</label>
        </div>

        <span style="margin-left: 5%;font-size: 19px;">@Html.DisplayFor(model => model.DetailDesc)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;text-decoration:  underline;">@Html.DisplayNameFor(model => model.UrlImage)</label>
        </div>

        <img src="~/Image/@Model.UrlImage" height="150px" width="100px" style="margin-left: 5%" />
    </li>


    <li class="list-group-item">
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-primary btn-lg" style="margin-left: 20%;width: 120px;" onclick="return confirm('Are you sure?');" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger btn-lg", @style = "margin-left: 2%; width: 120px; " })
            }
        </div>
    </li>
</ul>



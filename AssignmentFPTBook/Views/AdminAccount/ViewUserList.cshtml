@model IEnumerable<AssignmentFPTBook.Models.Account>
@{
    ViewBag.Title = "View User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid">
    <div class="card shadow" style="box-shadow: 0px 0px;">
        <div class="card-header py-3">
            <p class="text-center text-primary m-0 fw-bold" style="font-size: 24px;">User Account Management</p>

        </div>
        <div class="card-body" style="border-style: ridge;border-radius: 19px;filter: contrast(56%);">
            <div class="table-responsive table mt-2" id="dataTable-1" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th style="width: 241.4px;text-align: center;">@Html.DisplayNameFor(model => model.Username)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.Fullname)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.Email)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.Phone)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.Address)</th>
                            <th style="text-align: center;">@Html.DisplayNameFor(model => model.State)</th>

                            <th style="text-align: center;">Change account role</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.Username)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.Fullname)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">@Html.DisplayFor(modelItem => item.Address)</td>

                                @if (item.State == 1)
                                {
                                    <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">Admin</td>
                                }
                                else
                                {
                                    <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">User</td>
                                }
                                @if (item.Username.Equals("admin"))
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td style="text-align: center;">
                                        <div>@Html.ActionLink(" ", "DetailUser", new { id = item.Username }, new { @class = "fas fa-info-circle", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>








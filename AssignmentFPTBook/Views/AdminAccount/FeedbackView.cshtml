@model IEnumerable<AssignmentFPTBook.Models.Feedback>

@{
    ViewBag.Title = "FeedbackView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow" style="box-shadow: 0px 0px;">
        <div class="card-header py-3">
            <p class="text-center text-primary m-0 fw-bold" style="font-size: 24px;">Feedback Management</p>

        </div>
        <div class="card-body" style="border-style: ridge;border-radius: 19px;filter: contrast(56%);">
            <div class="table-responsive table mt-2" id="dataTable-1" role="grid" aria-describedby="dataTable_info">
                <table class="table table-striped table-hover my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Username)</th>
                            <th>@Html.DisplayNameFor(model => model.Account.Fullname)</th>
                            <th>@Html.DisplayNameFor(model => model.Account.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.ContentFeedback)</th>
                            <th style="text-align:center">@Html.DisplayNameFor(model => model.DateSend)</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="color: rgb(0,0,0);">@Html.DisplayFor(modelItem => item.Username)</td>
                                <td style="color: rgb(0,0,0);">@Html.DisplayFor(modelItem => item.Account.Fullname)</td>
                                <td style="color: rgb(0,0,0);">@Html.DisplayFor(modelItem => item.Account.Phone)</td>
                                <td style="color: rgb(0,0,0);">@Html.DisplayFor(modelItem => item.ContentFeedback)</td>
                                <td style="color: rgb(0,0,0); text-align:center">@Html.DisplayFor(modelItem => item.DateSend)</td>

                                @*<td style="text-align: center;">
                                        <div>@Html.ActionLink(" ", "Details", new { id = item.AuthorID }, new { @class = "fas fa-info-circle", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                                    </td>
                                    <td style="text-align: center;">
                                        <div>@Html.ActionLink(" ", "Edit", new { id = item.AuthorID }, new { @class = "fas fa-edit", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                                    </td>*@



                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
